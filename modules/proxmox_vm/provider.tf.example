terraform {
  required_providers {
    proxmox = {
      source  = "telmate/proxmox"
      version = "3.0.1-rc5"
    }
  }
}

provider "proxmox" {
  pm_api_url          = "https://your-proxmox-server:8006/api2/json"
  pm_api_token_id     = "root@pam!my-token-id"
  pm_api_token_secret = "my-token-secret"
  pm_tls_insecure     = true
}
